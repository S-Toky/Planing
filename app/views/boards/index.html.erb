<div class="container">
  <div>
    <h1>Boards</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @boards.each do |board| %>
          <tr>
            <td><%= board.name %></td>
            <td><%= board.user.email %></td>
            <td><%= link_to 'Show', board %></td>
            <td><%= link_to 'Edit', edit_board_path(board) %></td>
            <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Board', new_board_path %>
  </div>


  <div>
    <% if @board.present? %>
      <h1> <%= @board.name%> </h1>

        <h1>Projects</h1>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Board</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @board.projects.each do |project| %>
              <tr>
                <td><%= project.name %></td>
                <td><%= project.description %></td>
                <td><%= project.board_id %></td>
                <td><%= project.user_id %></td>
                <td><%= link_to 'Show', project %></td>
                <td><%= link_to 'Edit', edit_project_path(project) %></td>
                <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Project', new_project_path %>
      <div>
        <%= render "projects/form", project: Project.new, board: @board%>
      </div>
    <%end%>
  </div>


</div>


