<div class="container">
  <div class="container">
    <div class="row">
      <div class="col-4">
         <div>
          <h1>Boards</h1>

          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>User</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @boards.each do |board| %>
                <tr>
                  <td><%= board.name %></td>
                  <td><%= board.user.email %></td>
                  <td><%= link_to 'Show', board %></td>
                  <td><%= link_to 'Edit', edit_board_path(board) %></td>
                  <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            new board
          </button>
          <% @boards.each do |board| %>
          <%= render 'create_modal', board: Board.new %>
          <% end %>
          

          <%#= link_to 'New Board', new_board_path %>
        </div>
      </div>
      <div class="col-8">
        <div>
          <% if @board.present? %>
            <h1> <%= @board.name%> </h1>

              <h1>Projects</h1>

              <table>
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Board</th>
                    <th>User</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @board.projects.each do |project| %>
                    <tr>
                      <td><%= project.name %></td>
                      <td><%= project.description %></td>
                      <td><%= project.board_id %></td>
                      <td><%= project.user_id %></td>
                      <td><%= link_to 'Show', project %></td>
                      <td><%= link_to 'Edit', edit_project_path(project) %></td>
                      <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>

                    <div class="d-lg-inline-flex w-50">
                  <div class="card bg-dark text-white m-2">
                    <%= image_tag "01.png", class:"card-img"%>
                    <div class="card-img-overlay">
                      <h5 class="card-title"><%= project.name %></h5>
                      <p class="card-text"><%= project.description %></p>
                      <p class="card-text">Last updated 3 mins ago</p>
                      <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                          <%= render "projects/form", project: Project.new, board: @board%>
                        </div>
                      </div>
                      <p>
                  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    new project
                  </button>
                </p>
                    </div>
                  </div>
                </div>

                  <% end %>
                </tbody>
              </table>
              <br>
              <div>
                

               

               
                </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>


